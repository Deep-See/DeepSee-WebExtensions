{
    "manifest_version": 2,
    "name": "AdaptiveWeb",
    "version": "0.0.1",
    "description": "Adaptive web accessibility toolkit.",
    "permissions": [
        "activeTab",
        "storage",
        "nativeMessaging"
    ],
    "icons": {
        "32": "icons/adaptiveweb-32.png"
    },
    "applications": {
        "gecko": {
            "id": "io.adaptiveweb.awcli"
        }
    },
    "browser_action": {
        "default_icon": "icons/adaptiveweb-32.png",
        "default_title": "AdaptiveWeb",
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "all_frames": true,
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}