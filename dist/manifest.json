{
    "manifest_version": 3,
    "name": "AdaptiveWeb",
    "version": "0.1.0",
    "description": "Adaptive web accessibility platform.",
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage"
    ],
    "icons": {
        "32": "icons/adaptiveweb-32.png"
    },
    "browser_action": {
        "default_icon": "icons/adaptiveweb-32.png",
        "default_title": "AdaptiveWeb",
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "all_frames": true,
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}